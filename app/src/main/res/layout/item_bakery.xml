<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_bakery_cover_img_cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_bakery_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ex_bakery" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_bakery_play_img_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@+id/item_bakery_singer_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_bakery_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="빵집 이름"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/item_bakery_cover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_bakery_cover_img_cardView"/>

    <TextView
        android:id="@+id/item_bakery_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="4.9(00)"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/item_bakery_play_img_iv"
        app:layout_constraintTop_toBottomOf="@id/item_bakery_title_tv" />

    <ImageView
        android:id="@+id/item_bakery_today_reserv_iv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/today_reserv"
        app:layout_constraintTop_toBottomOf="@+id/item_bakery_singer_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/item_bakery_order_reserv_iv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/order_reserv"
        app:layout_constraintTop_toBottomOf="@+id/item_bakery_singer_tv"
        app:layout_constraintStart_toEndOf="@id/item_bakery_today_reserv_iv" />

    <ImageView
        android:id="@+id/item_bakery_store_sale_iv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/store_sale"
        app:layout_constraintTop_toBottomOf="@+id/item_bakery_singer_tv"
        app:layout_constraintStart_toEndOf="@id/item_bakery_order_reserv_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>